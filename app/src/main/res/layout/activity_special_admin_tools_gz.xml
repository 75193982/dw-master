<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sendTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="发送参数" />

        <TextView
            android:id="@+id/sendTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textIsSelectable="true"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/Gray100" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dingzhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行政区码：" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/codeEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:maxLength="4"
                        android:minWidth="100dp"
                        android:textSize="@dimen/dp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终端地址：" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/addressEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:maxLength="5"
                        android:minWidth="100dp"
                        android:textSize="@dimen/dp_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分合闸事件代码：" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/eventEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:maxLength="2"
                        android:minWidth="100dp"
                        android:textSize="@dimen/dp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长度：" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/lenthEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:maxLength="2"
                        android:minWidth="100dp"
                        android:textSize="@dimen/dp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发生时间：" />


                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_list_item_selector"
                        android:drawableRight="@drawable/arrow_gray_right"
                        android:gravity="center_horizontal"
                        android:minWidth="50dp"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/dp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分合闸标志: " />

                    <TextView
                        android:id="@+id/flagTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_list_item_selector"
                        android:contentDescription="5A"
                        android:drawableRight="@drawable/arrow_gray_right"
                        android:gravity="center_horizontal"
                        android:minWidth="50dp"
                        android:padding="@dimen/text_margin"
                        android:text="分闸"
                        android:textColor="@color/grgray"
                        android:textSize="@dimen/dp_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分合闸类型：" />


                    <TextView
                        android:id="@+id/typeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_list_item_selector"
                        android:contentDescription="0"
                        android:drawableRight="@drawable/arrow_gray_right"
                        android:gravity="center_horizontal"
                        android:minWidth="50dp"
                        android:padding="@dimen/text_margin"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分合闸类型2：" />


                    <TextView
                        android:id="@+id/type2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_list_item_selector"
                        android:contentDescription="0"
                        android:drawableRight="@drawable/arrow_gray_right"
                        android:gravity="center_horizontal"
                        android:minWidth="50dp"
                        android:padding="@dimen/text_margin"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据体：" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/contentEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="00"
                        android:gravity="center_horizontal"

                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:minWidth="100dp"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@id/action_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">

                <TextView
                    android:id="@+id/btnTv"
                    android:layout_width="fill_parent"
                    android:layout_height="?android:actionBarSize"
                    android:layout_centerInParent="true"
                    android:background="@color/Green"
                    android:gravity="center"
                    android:text="测试"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_second" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deviceTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10" />


                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="结果" />
            </LinearLayout>


            <TextView
                android:id="@+id/resultTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textIsSelectable="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>