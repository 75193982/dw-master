<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="用户信息"></TextView>

    <TextView
        android:id="@+id/userInfoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="用户信息"
        android:textColor="@color/Black"></TextView>

    <TextView
        android:id="@+id/userInfoBeilvTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/Black"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_weight="1.0"
            android:text="购电类型"
            android:textSize="@dimen/text_third" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@id/spinner"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            app:ms_alignLabels="false"
            app:ms_arrowColor="@color/disabled_color"
            app:ms_arrowSize="@dimen/text_third"
            app:ms_baseColor="@color/disabled_color"
            app:ms_enableErrorLabel="false"
            app:ms_enableFloatingLabel="false"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="@color/disabled_color"
            app:ms_floatingLabelText="@string/transformer_cotainStore"
            app:ms_highlightColor="@color/Green"
            app:ms_hint="@string/selected_store"
            app:ms_multiline="false" />
    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/spotTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:drawableLeft="@drawable/iconfont_must"
        android:hint="请输入购电金额"
        android:inputType="textNoSuggestions"
        android:textSize="@dimen/text_third"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="购电金额"
        app:met_singleLineEllipsis="true" />

    <com.andexert.library.RippleView
        android:id="@id/action_save"
        rv_centered="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_centerInParent="true"
            android:background="@color/Green"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/White"
            android:textSize="@dimen/text_second" />
    </com.andexert.library.RippleView>

</LinearLayout>