<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="电价编号"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/spotPricing_id"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="电价编号"
                android:inputType="textNoSuggestions"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="电价编号"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/transformer_cotainStore"
                android:textSize="@dimen/text_third" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@id/spinner"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                app:ms_alignLabels="false"
                app:ms_arrowColor="@color/disabled_color"
                app:ms_arrowSize="@dimen/text_third"
                app:ms_baseColor="@color/disabled_color"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="@color/error_color"
                app:ms_floatingLabelColor="@color/disabled_color"
                app:ms_floatingLabelText="@string/transformer_cotainStore"
                app:ms_highlightColor="@color/Green"
                app:ms_hint="@string/selected_store"
                app:ms_multiline="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/store_name"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotPricing_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/store_name"
                android:inputType="textNoSuggestions"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/store_name"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_type"
                android:textSize="@dimen/text_third" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@id/spinner_type"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                app:ms_alignLabels="false"
                app:ms_arrowColor="@color/disabled_color"
                app:ms_arrowSize="@dimen/text_third"
                app:ms_baseColor="@color/disabled_color"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="@color/error_color"
                app:ms_floatingLabelColor="@color/disabled_color"
                app:ms_floatingLabelText="@string/spotpricing_type"
                app:ms_highlightColor="@color/Green"
                app:ms_hint="@string/spotpricing_type"
                app:ms_multiline="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_priceCount"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotpricing_priceCount"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/spotpricing_priceCount"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/spotpricing_priceCount"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_pointedPrice"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotpricing_pointedPrice"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/spotpricing_pointedPrice"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/spotpricing_pointedPrice"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_peakPrice"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotpricing_peakPrice"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/spotpricing_peakPrice"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/spotpricing_peakPrice"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_flatPrice"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotpricing_flatPrice"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/spotpricing_flatPrice"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/spotpricing_flatPrice"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_weight="1.0"
                android:text="@string/spotpricing_valleyPrice"
                android:textSize="@dimen/text_third" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@id/spotpricing_valleyPrice"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:hint="@string/spotpricing_valleyPrice"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_third"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/spotpricing_valleyPrice"
                app:met_singleLineEllipsis="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/action_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_centerInParent="true"
                android:background="@color/Green"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/White"
                android:textSize="@dimen/text_second" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>